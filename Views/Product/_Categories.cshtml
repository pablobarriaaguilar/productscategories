@model List<Categorie>
<div class="container">
    <h1>All categories</h1> 
    @if(@Model.Count > 0){
    <form asp-action="AddCategory" asp-controller="Product" method="post">
    <select name="CategoryId" id="CategoryId">
    
    @foreach (Categorie categorie in Model)
    {

        <option value= "@categorie.CategoryId"> @categorie.Name</option>
    }
    </select>
    <button class="btn-primary">Add</button>
    </form>
    }
</div>